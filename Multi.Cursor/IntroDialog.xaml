<Window x:Class="Multi.Cursor.IntroDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        Title="Setup" 
        Height="350" Width="400"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Participant Number:" Grid.Row="0" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <TextBlock Name="ParticipantNumberTextBlock" Grid.Row="0" Grid.Column="1" Margin="10" VerticalAlignment="Center"/>

        <TextBlock Text="Task:" Grid.Row="1" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <ComboBox Name="TaskComboBox" Grid.Row="1" Grid.Column="1" Margin="10"/>

        <TextBlock Text="Technique:" Grid.Row="2" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <ComboBox Name="TechniqueComboBox" Grid.Row="2" Grid.Column="1" Margin="10"/>

        <TextBlock Text="Experiment:" Grid.Row="3" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <ComboBox Name="ExperimentComboBox" Grid.Row="3" Grid.Column="1" Margin="10"/>

        <TextBlock Text="Complexity:" Grid.Row="4" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <ComboBox Name="ComplexityComboBox" Grid.Row="4" Grid.Column="1" Margin="10">
            <ComboBoxItem Content="Simple" IsSelected="True"/>
            <ComboBoxItem Content="Moderate"/>
            <ComboBoxItem Content="Complex"/>
        </ComboBox>

        <Button Name="BigButton" 
                Content="Initialize" 
                Grid.Row="5" Grid.ColumnSpan="2" 
                Height="50" Width="200" 
                FontSize="16" 
                Margin="10"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Click="BeginButton_ClickAsync"/>
    </Grid>
</Window>