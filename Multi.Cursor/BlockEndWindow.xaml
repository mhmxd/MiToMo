<Window x:Class="Multi.Cursor.BlockEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Block Finished"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="BlockFinishedText"
                       FontSize="32"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Text="You can take a pause."
                       Foreground="#353535"
                       Margin="0,0,0,20"/>
            <TextBlock FontSize="30"
                       FontWeight="ExtraBold"
                       Foreground="#353535"
                       TextAlignment="Center">
                When ready, press <Run Foreground="Blue">SHIFT</Run> + <Run Foreground="Red">DEL</Run> keys on the keyboard to continue.
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
