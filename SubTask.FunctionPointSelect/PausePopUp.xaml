<Window x:Class="SubTask.FunctionPointSelect.PausePopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubTask.FunctionPointSelect"
        mc:Ignorable="d"
        Height="200" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="White"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="You can take a pause." FontSize="18" Margin="0, 30, 0, 0" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <TextBlock Text="Press SPACE to continue" FontSize="12" Margin="5" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            <Button 
                Content="Continue"
                Margin="0,25,0,0" Width="150" Height="30" HorizontalAlignment="Center"
                IsDefault="True"
                Click="Button_Click"
                FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"
                />
        </StackPanel>
    </Grid>
</Window>
