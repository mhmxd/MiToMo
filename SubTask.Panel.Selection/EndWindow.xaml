<Window x:Class="SubTask.Panel.Selection.EndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Block Finished"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="TopText"
                       FontSize="32"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Text="Task done."
                       Foreground="#353535"
                       Margin="0,0,0,20"/>
            <TextBlock x:Name="MainText"
                       FontSize="36"
                       FontWeight="ExtraBold"
                       Foreground="#353535"
                       TextAlignment="Center">
                Thank You!
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
